class: BEE-Charliecloud
id: helloWorld
label: Basic hello world example
requirements:
  ResourceRequirement:
    numNodes: 1
    jobTime: "0:10:00"
    manageSys: slurm
  SoftwareModules:
    python
    friendly-testing:
    charliecloud:
  CharliecloudRequirement:
    alpine:
      source: /var/tmp/alpine.tar.gz
      tarDir: /var/tmp
      removeAfter: False
      defaultFlags:
        -b: $HOME/pbryant/test
        --no-home:
  EnvVarRequirements:
    envDef:
      PATH: $HOME/.local/bin
    sourceDef:
      activate: bxp
workerBees:
   helloTime.sh:
    program:
      system: alpine
      flags:
        -c: /mnt/0